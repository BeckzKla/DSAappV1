<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewProfile.CreateProfile2"

    android:orientation="vertical"
    android:background="@drawable/google_pixel_3xl_login"
    >


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="146dp"
        android:layout_height="130dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <EditText
            android:id="@+id/Fname"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_name"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Nome Completo"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/tellefNumber"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_telefone"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Numero di telefono"
            android:inputType="phone"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <TextView
            android:id="@+id/birthdayDate"
            android:layout_width="289dp"
            android:layout_height="42dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_input"
            android:backgroundTint="@color/icon_color"
            android:drawableStart="@drawable/ic_brtd"
            android:drawablePadding="10dp"
            android:ems="10"
            android:inputType="date"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:text="Data di nascita"
            android:textSize="18dp" />


        <LinearLayout
            android:layout_width="323dp"
            android:layout_height="37dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/typeU"
                android:layout_width="166dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_input"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:text="Tipologia utente: "
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/spinnerType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:outlineAmbientShadowColor="@color/white"/>


        </LinearLayout>

        <Button
            android:id="@+id/create"
            android:layout_width="246dp"
            android:layout_height="62dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_input"
            android:text="Create"
            android:transitionName="transLoginButton" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="(2/2)"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        android:textColor="@color/bordo6A2544"/>


</androidx.constraintlayout.widget.ConstraintLayout>